---
import ProyectCard from "@components/card/ProyectCard.astro";
import FrameworkBanner from "@components/banner/Frameworks.banner.astro";
---

<section
  class="w-full h-fit overflow-x-hidden overflow-hidden  proyects-section relative pt-[5%] bg-creative_secondary
"
>
  <div class="flex absolute justify-between inset-0 ">
    <img
      class="opacity-75 w-[30vw]"
      src="./assets/svg/Proyects_Icon.svg"
      alt=""
    />
    <img
      class="opacity-75 w-[30vw] rotate-180"
      src="./assets/svg/Proyects_Icon.svg"
      alt=""
    />
  </div>
  <div class="w-full md:h-auto xl:h-full xl:min-h-screen">
    <div class="flex flex-col mt-10 items-center justify-center">
      <h2 class="text-4xl font-light text-creative_orange">
        Nuestras muestras
      </h2>
      <h1
        class="text-2xl md:text-4xl lg:text-6xl font-bold text-center mt-3 text-white"
      >
        Mira algunos de nuestros
        <br />
        proyectos
      </h1>
    </div>

    <div
      class="w-full h-fit grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 px-[7dvw] pt-[5%]"
    >
      {
        Array.from({ length: 4 }).map((item, index) => (
          <ProyectCard key={index} />
        ))
      }
    </div>
    <div class="flex justify-center mb-[5vh]">
      <a
        href="/servicios"
        class="mx-auto text-creative_orange text-xl mt-10 font-light"
      >
        ver mas
      </a>
      
    </div>

    <!-- Framework Banner -->
    <FrameworkBanner />

  </div>

</section>

<script>
  import "@lib/animations/main/proyects.animation";
</script>
