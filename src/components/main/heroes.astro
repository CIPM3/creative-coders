---
import { Selected } from "@assets/svg";
---

<main
    class="w-full h-screen relative bg-black bg-cover
"
>
    <img
        id="img_header"
        src="./assets/svg/mainImage.svg"
        class="object-cover fade-in-image h-full w-full"
        alt=""
    />
    <div
        class="w-full h-full flex flex-col xl:flex-row absolute xl:pl-[7dvw] inset-0 bg-creative_primary/90"
    >
        <div class="w-full h-full flex  xl:hidden xl:items-end">
            <img
                class="mt-[20%]  md:mt-[10%]"
                src="./assets/svg/main_front_image.svg"
                alt=""
            />
        </div>
        <div
            class="w-full xl:w-[40%] md:px-[4dvw] xl:px-0 h-full flex flex-col justify-center items-start"
        >
            <h1
                class="text-4xl md:text-6xl  mt-5 xl:text-start text-center w-9/12 xl:w-full mx-auto headerText font-bold text-white"
            >
                Agencia de <br  />
                Diseño y desarrollo de páginas web <br />
                y Aplicaciones
            </h1>

            <a
                href="#paquetes"
                class="py-6 w-[80%] xl:w-[60%] shadow-2xl mx-auto xl:mx-0 shadow-[#FA4B0070] mt-20 md:mt-8 lg:mt-20 xl:mt-[20%] gap-x-4 flex items-center justify-center rounded-lg text-white text-3xl font-light bg-[#FA4B00]"
            >
                Ver paquetes

                <Selected className="rotate-180 size-5 fill-white" />
            </a>
        </div>

        <div class="w-[60%] h-full flex xl:items-end">
            <img
                id="img_header"
                class="fade-in-image hidden xl:block object-cover xl:-translate-y-[10%]"
                src="./assets/svg/main_front_image.svg"
                alt=""
            />
        </div>
    </div>
</main>

<style>
    .image-container {
        overflow: hidden;
    }
    .fade-in-image {
        opacity: 0;
    }
    .headerText {
        transform: translateX(-250);
        opacity: 0;
    }
</style>

<script>
    import "@lib/animations/main/heroes.animation";
</script>
