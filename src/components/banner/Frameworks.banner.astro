<div class="w-full absolute bottom-0">
    <img src="./assets/images/code.svg" class="object-cover -z-[1]" alt="" />

    <div class="absolute bg-creative_orange/60 flex justify-between items-center gap-x-10 inset-0 w-full px-[7dvw]">
        {frameworks.map(item=>(
            <img class="size-24" src={item.icon} alt={item.name}>
        ))}
    </div>
</div>
