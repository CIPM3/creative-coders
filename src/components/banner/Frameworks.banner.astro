const url = "./assets/images/frameworks"

const frameworks = [
  {
    name:"html",
    icon: `${url}/html.svg`
  },
  {
    name:"javascript",
    icon: `${url}/javascript.svg`
  },
  {
    name:"css",
    icon: `${url}/css.svg`
  },
  {
    name:"node",
    icon: `${url}/node.svg`
  },
  {
    name:"firebase",
    icon: `${url}/firebase.svg`
  },
  {
    name:"react",
