---
// Componente para mostrar un ítem de servicio
interface Props {
  title: string;
  description: string;
  icon: string;
  index: number; // Asume que icon es la ruta al ícono correspondiente
}

const { title, description, icon, index } = Astro.props;
---

<div
  class={`flex items-start p-4  
            opacity-0 -translate-x-[50px] service-item
            ${index == 0 && "border-r-[0.2px] border-creative_orange"}
            ${index == 1 && "border-r-[0.2px]  border-creative_orange"}
            ${index == 3 && "border-r-[0.2px] border-creative_orange col-start-2 col-end-3"}
            shadow-md hover:shadow-lg transition-shadow
            duration-300`}
>
  <img src={icon} alt={title} class="size-12" />
  <div class="ml-4">
    <h3 class="text-white text-xl font-bold">{title}</h3>
    <p class="text-gray-200 text-white text-lg mt-3">{description}</p>
  </div>
</div>

