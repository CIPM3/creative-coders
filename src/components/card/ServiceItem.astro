---
// Componente para mostrar un ítem de servicio
interface Props {
  title: string;
  description: string;
  icon: string;
  index: number; // Asume que icon es la ruta al ícono correspondiente
}

const { title, description, icon, index } = Astro.props;
---

<div
  class={`flex flex-col items-center lg:flex-row lg:items-start p-4  
            opacity-0 -translate-x-[50px] service-item
            ${index == 0 && "border-r-[0.2px] xl:border-creative_orange lg:col-start-1 lg:col-end-3"}
            ${index == 1 && "border-r-[0.2px]  xl:border-creative_orange lg:col-start-3 lg:col-end-5"}
            ${index == 2 && "lg:col-start-5 lg:col-end-7"}
            ${index == 3 && "border-r-[0.2px] lg:w-[60%] ml-auto xl:border-creative_orange lg:col-start-1 lg:col-end-4"}
            ${index == 4 && "lg:col-start-4 lg:w-[60%] lg:col-end-7"}
            shadow-md hover:shadow-lg transition-shadow
            duration-300`}
>
  <img src={icon} alt={title} class="size-12" />
  <div class="ml-4">
    <h3 class="text-white text-center lg:text-start text-xl font-bold">{title}</h3>
    <p class="text-gray-200 text-center lg:text-start text-white text-lg mt-3">{description}</p>
  </div>
</div>

